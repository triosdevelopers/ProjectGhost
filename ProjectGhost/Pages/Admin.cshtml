<div id="miscOptions" class="options">
	<form id="miscOptionsForm" method="post" asp-page-handler="MiscOptions">
		<div class="optionsPane">
			<h1>Camera Settings</h1>
			<div class="container">
				<h3>Contrast:&nbsp;<span id="conVal">@contrastVar</span></h3>
				<div class="slidecontainer">
					<input type="range" min="-100" max="100" value="@contrastVar"
						   class="slider" name="contrast" id="ContrastSlider"
						   onchange="getValue(this, conVal)" />
				</div>
			</div>

			<div class="container">
				<h3>Brightness:&nbsp;<span id="brVal">@brightnessVar</span></h3>
				<div class="slidecontainer">
					<input type="range" min="0" max="100" value="@brightnessVar" class="slider"
						   name="brightness" id="BrightnessSlider" onchange="getValue(this, brVal)">
				</div>
			</div>
			
			<h1 class="marginTop">LED Options</h1>
			<div class="container">
				<h3>LED:&nbsp; <span id="ledVal">@(LedVar == 0 ? "Off" : "On")</span></h3>
				<div class="toggleContainer">
					<input type="range" min="0" max="1" value="@LedVar"
						   class="slider" name="ledToggle" id="LedToggle" onchange="toggleValue(this, ledVal)">
				</div>

			</div>
			<h1 class="marginTop">Mic Settings</h1>
			<div class="container">
				<h3>Mic:&nbsp; <span id="micVal">@(micVar == 0 ? "Off" : "On")</span></h3>
				<div class="toggleContainer">
					<input type="range" min="0" max="1" value="@micVar"
						   class="slider" name="micToggle" id="MicToggle" onchange="toggleValue(this, micVal)">
				</div>

			</div>
			<h1 class="marginTop">Proximity Settings</h1>
			<div class="container">
				<h3>Proximity:&nbsp; <span id="proxVal">@(proxVar == 0 ? "Off" : "On")</span></h3>
				<div class="toggleContainer">
					<input type="range" min="0" max="1" value="@proxVar"
						   class="slider" name="proximityToggle" id="ProximityToggle" onchange="toggleValue(this, proxVal)">
				</div>
			</div>
			<div class="container"></div>
		</div>

		<div id="liveFeedDiv">
			<div id="liveFeed">
				<img id="mjpeg_dest" src="http://10.2.114.26:8080/cam.jpg"
					 alt="Live feed" style="width:100%;" />
			</div>
			<button type="submit" id="btnApplyChanges">Confirm Settings</button>
		</div>
	</form>
	<div id="RecordBtns" style="text-align:center;">
		<form id="SnapshotForm" method="post" asp-page-handler="Snapshot">
			<button id="btnSnapshot" class="RcdBtn">Take Snapshot</button>
