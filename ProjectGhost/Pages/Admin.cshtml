@{var contrastVar = (Model.OptionsID == -1 ? 0 : Model.Contrast);}
@{var brightnessVar = (Model.OptionsID == -1 ? 50 : Model.Brightness);}

@{var AudioVar = (Model.OptionsID == -1 ? 0 : Model.Audio);}
